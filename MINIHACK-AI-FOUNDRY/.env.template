# Azure AI Foundry Workshop Configuration Template
# Copy this file to .env and fill in your actual values

# ====================================
# Azure Subscription and Tenant Information
# ====================================
# Your Azure subscription ID (generated during deployment)
SUBSCRIPTION_ID=your_subscription_id

# Your Azure tenant ID (generated during deployment)
TENANT_ID=your_tenant_id

# ====================================
# Azure AI Foundry Project Configuration
# ====================================
# Connection string for your Azure AI Foundry project
AIPROJECT_ENDPOINT=your_project_connection_string

# Project workspace ID (generated during deployment)
PROJECT_WORKSPACE_ID=your_workspace_id

# ====================================
# Azure OpenAI Configuration
# ====================================
# Your Azure OpenAI service endpoint and key
AZURE_OPENAI_ENDPOINT=your_openai_endpoint
AZURE_OPENAI_KEY=your_openai_key

# Model deployment names (must match your Azure OpenAI deployments)
MODEL_DEPLOYMENT_NAME=gpt-4o
EMBEDDING_MODEL_DEPLOYMENT_NAME=text-embedding-3-small
CHAT_MODEL=gpt-4o
EVALUATION_MODEL=gpt-4o

# ====================================
# Azure AI Search Configuration
# ====================================
# Your Azure AI Search service endpoint and key
AZURE_SEARCH_ENDPOINT=your_search_endpoint
AZURE_SEARCH_KEY=your_search_key
AZURE_SEARCH_INDEX_NAME=rag-mini-wikipedia

# ====================================
# Monitoring and Observability
# ====================================
# Azure Monitor Application Insights connection string (optional)
AZURE_MONITOR_CONNECTION_STRING=your_monitor_connection_string

# Logging configuration
LOG_LEVEL=INFO
ENABLE_TRACING=true

# ====================================
# Evaluation Configuration
# ====================================
# Evaluation settings
ENABLE_DETAILED_EVALUATION=true
EVALUATION_BATCH_SIZE=10

# ====================================
# Workshop Settings
# ====================================
# General workshop configuration
WORKSHOP_NAME=Azure AI Foundry Workshop
WORKSHOP_VERSION=1.0.0